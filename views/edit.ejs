<%- include('header'); -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link rel="icon" href="1-o-modified.png" type="image/icon type" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
</head>
<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px; ">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Edit Profile</h3>
                            <form action="/upload" method="POST" enctype="multipart/form-data">

                                <div class="row">
                                    <div class="col-md-12 mb-4">
                                        
                                        <div class="form-outline">
                                            Name:<label class="form-label" for="firstName"></label>
                                            <input type="text" id="firstName" class="form-control form-control-lg" name="name" value="<%=username.name%>" readonly />

                                        </div>

                                        
            
                            </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 mb-4 pb-2">
                                        <% if(e>0) {%>
                                        <div class="form-outline">
                                            About:<label class="form-label" for="emailAddress"></label>
                                            <input type="text" id="emailAddress" class="form-control form-control-lg" name="about"  value="<%=profileabout.about%>" />

                                        </div>

                                        <% } %>
                                        <% if(e==0) { %>
                                            <div class="form-outline">
                                                Name:<label class="form-label" for="firstName"></label>
                                                <input type="text" id="firstName" class="form-control form-control-lg" name="about" placeholder="Enter your about" />
                                        <% } %>
                                    </div>
                   

                                    </div>
                                    <div class="col-md-12 mb-4 pb-2">

                                        <div class="form-outline">
                                            Email:<label class="form-label" for="password"></label>
                                            <input type="email" id="password" class="form-control form-control-lg" name="email" value="<%=user%>" readonly/>

                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-4 pb-2">
                                        <div class="form-outline">
                                            Profile Picture:<label class="form-label" for="profile Picture"></label>
                                            <input type="file"  class="form-control form-control-lg" name="image"  required/>

                                        </div>


                                    </div>
                                </div>

                                <div class="mt-4 pt-2 mx-3 mb-3">
                                    <input class="btn btn-primary btn-lg" type="submit" value="Upload" />
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>



















   
</body>
</html>